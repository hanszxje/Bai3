@{
    ViewBag.Title = "Đăng ký chuyên ngành";
}

<h2 style="text-align: center; color: #333; margin-bottom: 30px;">Đăng ký chuyên ngành</h2>

<div style="max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); background-color: #f9f9f9;">
    @using (Html.BeginForm("ShowKQ", "Student", FormMethod.Post))
    {
        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">MSSV:</label>
            <input type="text" name="MSSV" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
        </div>
        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Họ tên:</label>
            <input type="text" name="HoTen" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
        </div>
        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Điểm TB:</label>
            <input type="number" step="0.1" name="DiemTB" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
        </div>
        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Chuyên ngành:</label>
            <select name="ChuyenNganh" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;">
                <option value="CNPM">CNPM</option>
                <option value="HTTT">HTTT</option>
                <option value="ANM">ANM</option>
                <option value="TTNT">TTNT</option>
                <option value="MMT">MMT</option>
            </select>
        </div>
        <div style="text-align: center;">
            <input type="submit" value="Đăng ký" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;" />
        </div>
    }
</div>